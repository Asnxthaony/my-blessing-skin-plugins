{% extends 'user.base' %}

{% block title %}账号绑定{% endblock %}

{% block content %}

<div class="row">
    <div class="col-lg-4">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">我的世界中文论坛</h3>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover">
                    <tbody>
                        {% if mcbbs.forum_uid %}
                            <tr>
                                <td>UID</td>
                                <td>{{ mcbbs.forum_uid }}</td>
                            </tr>
                            <tr>
                                <td>用户名</td>
                                <td>{{ mcbbs.forum_username }}</td>
                            </tr>
                            <tr>
                                <!-- TODO 转换为人类可读形式 e.g. Lv.9 牧场主 -->
                                <td>用户组</td>
                                <td>{{ mcbbs.forum_groupname }}</td>
                            </tr>
                            <tr>
                                <td>绑定时间</td>
                                <td>{{ mcbbs.created_at }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="2">点击按钮，立刻绑定 我的世界中文论坛 帐号</td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                {% if mcbbs.forum_uid %}
                    <a href="{{ url('user/connect/mcbbs') }}" class="btn bg-primary">立即同步</a>
                    <a href="javascript:alert('此功能尚未完成！')" class="btn bg-warning">点击解绑</a>
                {% else %}
                    <a href="{{ url('user/connect/mcbbs') }}" class="btn bg-primary">立即绑定</a>
                {% endif %}
            </div>
        </div>
    </div>
</div>

{% endblock %}
