<div class="card card-danger">
    <div class="card-header">
        <h3 class="card-title">QQ</h3>
    </div>
    <div class="card-body p-0">
        <table class="table table-hover">
            <tbody>
                {% if qq %}
                    <tr>
                        <td>QQ ID</td>
                        <td>{{ qq.qq_id }}</td>
                    </tr>
                    <tr>
                        <td>{{ trans('mcstaralliance::connect.linked_at') }}</td>
                        <td>{{ qq.created_at }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2">点击按钮，立刻绑定 QQ 帐号</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        {% if qq %}
            <a href="javascript:alert('Not implemented yet!')" class="btn bg-warning">{{ trans('mcstaralliance::connect.unlink') }}</a>
        {% else %}
            <a href="javascript:alert('Not implemented yet!')" class="btn bg-primary">{{ trans('mcstaralliance::connect.link') }}</a>
        {% endif %}
    </div>
</div>
