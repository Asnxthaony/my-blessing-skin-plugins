<div class="card card-danger">
    <div class="card-header">
        <h3 class="card-title">QQ</h3>
    </div>
    <div class="card-body p-0">
        <table class="table table-hover">
            <tbody>
                {% if qq %}
                    <tr>
                        <td>QQ ID</td>
                        <td>{{ qq.qq_id }}</td>
                    </tr>
                    <tr>
                        <td>{{ trans('mcstaralliance::connect.linked_at') }}</td>
                        <td>{{ qq.created_at }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2">请按照「<a href="https://www.mcstaralliance.com/archives/how-to-link-your-xingyu-account-to-a-qq-account.html">绑定操作指南</a>」，绑定 QQ 帐号。</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        {% if qq %}
            <a href="javascript:alert('请联系管理员解绑')" class="btn bg-warning">{{ trans('mcstaralliance::connect.unlink') }}</a>
        {% endif %}
    </div>
</div>
