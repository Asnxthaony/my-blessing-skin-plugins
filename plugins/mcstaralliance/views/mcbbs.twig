{% extends 'admin.base' %}

{% block title %}账号绑定 - MCBBS{% endblock %}

{% block content %}

<div class="card">
  <div class="card-body p-0">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>#</th>
            <th>UID</th>
            <th>论坛 UID</th>
            <th>论坛用户名</th>
            <th>论坛用户组</th>
            <th>绑定时间</th>
            <th>同步时间</th>
          </tr>
        </thead>
        <tbody>
          {% for record in records %}
            <tr>
              <td>{{ record.id }}</td>
              <td>{{ record.user_id }}</td>
              <td>{{ record.forum_uid }}</td>
              <td>{{ record.forum_username }}</td>
              <td>{{ group_names[record.forum_groupid] }}</td>
              <td>{{ record.created_at }}</td>
              <td>{{ record.updated_at }}</td>
            </tr>
          {% else %}
            <tr>
              <td colspan="7">{{ trans('mcstaralliance::record.no-records') }}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
    <div class="card-footer">
      <div class="float-right">
        {{ record.links() | raw }}
      </div>
    </div>
</div>

{% endblock %}
