<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">钉钉</h3>
    </div>
    <div class="card-body p-0">
        <table class="table table-hover">
            <tbody>
                {% if dingtalk %}
                    <tr>
                        <td>{{ trans('general.user.nickname') }}</td>
                        <td>{{ dingtalk.nickname }}</td>
                    </tr>
                    <tr>
                        <td>{{ trans('mcstaralliance::connect.linked_at') }}</td>
                        <td>{{ dingtalk.created_at }}</td>
                    </tr>
                    <tr>
                        <td>{{ trans('mcstaralliance::connect.synced_at') }}</td>
                        <td>{{ dingtalk.updated_at }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2">点击按钮，立刻绑定钉钉帐号</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        {% if dingtalk %}
            <a href="{{ url('user/connect/dingtalk') }}" class="btn bg-primary">{{ trans('mcstaralliance::connect.sync') }}</a>
            <a href="javascript:alert('Not implemented yet!')" class="btn bg-warning">{{ trans('mcstaralliance::connect.unlink') }}</a>
        {% else %}
            <a href="{{ url('user/connect/dingtalk') }}" class="btn bg-primary">{{ trans('mcstaralliance::connect.link') }}</a>
        {% endif %}
    </div>
</div>
