{% extends 'admin.base' %}

{% block title %}账号绑定 - 钉钉{% endblock %}

{% block content %}

<div class="card">
  <div class="card-body p-0">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>#</th>
            <th>Open ID</th>
            <th>Union ID</th>
            <th>{{ trans('general.user.nickname') }}</th>
            <th>{{ trans('mcstaralliance::connect.linked_at') }}</th>
          </tr>
        </thead>
        <tbody>
          {% for record in records %}
            <tr>
              <td>{{ record.id }}</td>
              <td>{{ record.open_id }}</td>
              <td>{{ record.union_id }}</td>
              <td>{{ record.nickname }}</td>
              <td>{{ record.created_at }}</td>
            </tr>
          {% else %}
            <tr>
              <td colspan="5">{{ trans('mcstaralliance::record.no-records') }}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
    <div class="card-footer">
      <div class="float-right">
        {{ records.links() | raw }}
      </div>
    </div>
</div>

{% endblock %}
