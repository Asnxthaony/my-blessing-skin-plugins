{% extends 'admin.base' %}

{% block title %}材质操作日志{% endblock %}

{% block content %}
  <div class="card">
    <div class="card-body p-0">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>#</th>
            <th>上传者UID</th>
            <th>材质ID</th>
            <th>操作人</th>
            <th>理由</th>
            <th>创建时间</th>
          </tr>
        </thead>
        <tbody>
          {% for record in records %}
            <tr>
              <td>{{ record.id }}</td>
              <td>{{ record.user_id }}</td>
              <td>{{ record.texture_id }}</td>
              <td>{{ record.operator }}</td>
              <td>{{ record.reason }}</td>
              <td>{{ record.created_at }}</td>
            </tr>
          {% else %}
            <tr>
              <td class="text-center" colspan="6">暂无记录</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
    <div class="card-footer">
      <div class="float-right">
        {{ records.links()|raw }}
      </div>
    </div>
  </div>
{% endblock %}
